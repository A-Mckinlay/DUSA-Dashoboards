                            {{>spectrographPage}}
                        </div>
                        <div id="overview" class="tab-pane fade">
                            <h3>Overview</h3>
                            {{>overviewPage}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
